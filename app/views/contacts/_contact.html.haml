%tr{data: {href: contact_path(contact)}}
  %td.property= contact.name
  %td.property= contact.house_phone
  %td.property= contact.mobile_phone
  %td.property= contact.email
  %td.property= contact.date_of_birth
  %td.property{:align => "center", :valign => "center"}
    = image_tag contact.avatar.url, class: "img-circle img-responsive table-image"
  %td
    = link_to contact_path(contact), class: 'btn btn-primary' do
      %span.glyphicon.glyphicon-hand-right
      = Contact.human_attribute_name(:show)
  %td
    = link_to edit_contact_path(contact), class: 'btn btn-warning' do
      %span.glyphicon.glyphicon-edit
      = Contact.human_attribute_name(:edit)
  %td
    = link_to contact_path(contact), class: 'btn btn-danger', method: :delete, data: { confirm: Contact.human_attribute_name(:sure) } do
      %span.glyphicon.glyphicon-remove
      = Contact.human_attribute_name(:destroy)