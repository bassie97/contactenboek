.contact_form
  .panel-body
    = form_for @contact do |f|
      .form-group
        = f.label Contact.human_attribute_name(:name).capitalize
        = f.text_field :name, class: 'form-control'
        .form-group
          = f.label Contact.human_attribute_name(:add_address)
          = add_child_button("<i class='glyphicon glyphicon-plus'></i>", :addresses, "addresses")
          #addresses
            = f.fields_for :addresses do |builder|
              = render "address_fields", :f => builder
          = new_fields_template f, :addresses
      - [:house_phone, :mobile_phone, :email].each do |attr|
        .form-group
          = f.label Contact.human_attribute_name(attr).capitalize
          = f.text_field attr, class: 'form-control'
      .form-group
        = f.label :date_of_birth
        = f.date_select :date_of_birth, start_year: 1900,  class: 'form-control'
      .form-group
        = f.label :avatar
        = f.file_field :avatar
      .form-group
        = f.submit   class: 'btn btn-primary'