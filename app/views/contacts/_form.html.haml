- if @contact.errors.any?
  .row
    .col-md-6.col-xs-12
      .panel.panel-danger
        .panel-heading.error_explanation
          %h2
            = pluralize(@contact.errors.count, "error")
        .panel-body
          %ul
            - @contact.errors.full_messages.each do |msg|
              %li= msg
.contact_form
  = form_for @contact do |f|
    .form-group
      %label Name:
      = f.text_field :name, class: 'form-control'
      .form-group
        .row
          = f.fields_for :addresses do |address_form|
            .col-md-4.col-md-offset-1.col-sx-12
              .form-group
                .form-inline
                  .checkbox
                    = address_form.label Contact.human_attribute_name(:remove)
                    = address_form.check_box :_destroy, class: 'form-control'
              .form-group
                .form-inline
                  .radio
                    .table
                      %tbody
                        %tr
                          %td
                            = Contact.human_attribute_name(:mail_address)
                          %td
                            = address_form.radio_button :address_kind, 'mail_address', class: 'form-control'
                          %td
                            = Contact.human_attribute_name(:visit_address)
                          %td
                            = address_form.radio_button :address_kind, 'visit_address', class: 'form-control'
              - [:country, :city, :street, :house_number, :zip_code].each do |attr|
                .form-group
                  = address_form.label Contact.human_attribute_name(attr)
                  = address_form.text_field attr, class: 'form-control'
    - [:house_phone, :mobile_phone, :email].each do |attr|
      .form-group
        = f.label attr
        = f.text_field attr, class: 'form-control'
    .form-group
      = f.label :date_of_birth
      = f.date_select :date_of_birth, start_year: 1900,  class: 'form-control'
    .form-group
      = f.label :avatar
      = f.file_field :avatar
    .form-group
      - btn_text = @contact.new_record? ? t('activerecord.attributes.contact.new') : t('activerecord.attributes.contact.edit')
      = f.submit btn_text, class: 'btn btn-primary'