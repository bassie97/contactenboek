.pull-left
  = form_tag contact_path(@contact), method: 'patch', id: 'my-awesome-dropzone', class: 'dropzone'

%table#profile
  %thead
    %tr
      %th{colspan: 2}
        = image_tag @contact.avatar.url, class: "img-circle img-responsive"
  %tbody
    - [:name, :house_phone, :mobile_phone, :email].each do |attr|
      %tr
        %th= Contact.human_attribute_name(attr)
        %td= @contact.send(attr)
    %tr
      %th= Contact.human_attribute_name(:date_of_birth)
      %td= l @contact.date_of_birth, format: :long
= link_to 'Back', contacts_path, class: 'btn btn-primary'




